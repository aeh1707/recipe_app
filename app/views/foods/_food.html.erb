<div id="<%= dom_id food %>" class="container text-center border border-secondary rounded mb-4">
  <div class="row bg-secondary bg-gradient text-white rounded-top">
    <h1 class="h3 col-md-5 py-3"><%= food.name %></h1>
    <div class="col-md-3 d-flex align-items-center justify-content-center py-3">
      <p class="h3 mb-0"><%= food.measurement_unit %></p>
    </div>
    <div class="col-md-2 d-flex align-items-center justify-content-center py-3">
      <p class="h3 mb-0">$<%= food.price %></p>
    </div>
    <div class="col-md-2 d-flex align-items-center justify-content-center py-3">
      <%= button_to "Delete", food_url(food), method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
</div>
