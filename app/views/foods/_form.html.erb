<%= form_with(model: food, class: "form", style: "max-width: 80%; margin: 0 auto;") do |form| %>
  <% if food.errors.any? %>
    <div class="alert alert-danger" style="margin-bottom: 20px;">
      <h2><%= pluralize(food.errors.count, "error") %> prohibited this food from being saved:</h2>
      <ul>
        <% food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group" style="margin-bottom: 20px;">
    <%= form.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="form-group" style="margin-bottom: 20px;">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group" style="margin-bottom: 20px;">
    <%= form.label :price %>
    <%= form.number_field :price, class: "form-control" %>
  </div>

  <div class="form-group" style="margin-bottom: 20px;">
    <%= form.label :measurement_unit %>
    <%= form.select :measurement_unit, options_for_select([["Units", "u"], ["Grams", "g"], ["Kilograms", "kg"], ["Liters", "l"], ["Milliliters", "ml"], ["Cups", "cups"], ["Pounds", "lbs"], ["Ounces", "oz"]]), {}, class: "form-control" %>
  </div>

  <div class="form-group" style="margin-bottom: 20px;">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, class: "form-control" %>
  </div>

  <%= form.submit "Save", class: "btn btn-primary" %>
<% end %>
