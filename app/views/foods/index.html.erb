<p style="color: green"><%= notice %></p>
<div class="d-flex justify-content-end" style="margin-bottom: 20px; width: 90%;">
  <%= link_to "Add Food", new_food_path, class:"btn btn-primary" %>
</div>
<div id="recipes">
  <table class="tableRecipeList">
    <tr>
      <th>Food</th>
      <th>Measurement Unit</th>
      <th>Unit Price</th>
      <th>Actions</th>
    </tr>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.measurement_unit %></td>
        <td>$<%= food.price %></td>
        <td>
          <%= button_to "Delete", food_url(food), method: :delete, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </table>
</div>


