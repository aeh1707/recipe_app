<p style="color: green"><%= notice %></p>

<%= flash[:success] %>
<%= flash[:error] %>

<div id="recipes">
  <% @recipes.each do |recipe| %>
    <%= render recipe %>
    <a href="/recipes/<%= recipe.id %>" class="recipeMainBox">
      <div class="leftSideRecipe">
        <h1><%= recipe.name %></h1>
        <%= button_to "Delete", recipe_path(recipe), method: :delete, class: "btn btn-danger" %>
      </div>

      <div class="rightSideRecipe">
        <p><%= recipe.description %></p>
      </div>
    </a>
  <% end %>
  <button class="backToRecipes"><%= link_to "Add new recipes", new_recipe_path %></button>
</div>

